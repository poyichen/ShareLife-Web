<% include ../partials/header %>

<div class= container>
    <h1 class="mt-5 text-center">Edit <%= photo.title%> </h1>
    <div style="width:30%; margin: 25px auto;">
        <form action = "/photos/<%= photo._id%>?_method=PUT" method = "POST">
            <div class="form-group">
                <input class="form-control" type = "text" name="photo[title]" value = "<%= photo.title%>">
            </div>
            <div class="form-group">
                <input class="form-control" type = "text" name="photo[image]" value = "<%= photo.image%>">
            </div>
            <div class="form-group">
                <input class="form-control" type = "text" name="photo[description]" value = "<%= photo.description%>">
            </div>
            <div class="form-group">
                <input class="form-control" type = "date" name = "photo[date]" value="<%= photo.date %>">
            </div>
            <div class="form-group">
                <button class="btn btn-lg btn-primary btn-block">Submit</button>
            </div>
        </form>
        <a href="/photos">Go Back</a>
    </div>
</div>
<% include ../partials/footer %>